<%- include('../includes/head.ejs')  %>

    <form action="/login" method="POST" class="form-center">
        <div class="row">
            <% if (errorMessage) { %>
                <div class="input-field col s12">
                    <div class="card-panel red lighten-2">
                        <span class="white-text"><%= errorMessage %></span>
                    </div>
                </div>
                <% } %>
                    <div class="input-field col s12">
                        <input
                            class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %> "
                            placeholder="E-Mail..."
                            name="email"
                            id="email"
                            type="email"
                            value="<%= oldInput.email %> ">
                        <label class="active" for="email">E-Main</label>
                    </div>
                    <div class="input-field col s12">
                        <input
                            class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %> "
                            placeholder="Password..."
                            name="password"
                            id="password"
                            type="password"
                            value="<%= oldInput.password %> ">
                        <label class="active" for="password">Password</label>
                    </div>

                    <div class="input-field col s12">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="waves-effect waves-light btn red">Login</button>
                    </div>

                    <div class="input-field col s12 centered">
                        <a href="/reset">Reset Password</a>
                    </div>
        </div>
    </form>

    <%- include('../includes/end.ejs')  %>