<%- include('../includes/head')  %>

    <form action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %> " method="POST">
        <div class="row">
            <div class="input-field col s12">
                <input placeholder="Enter Title..." name="title" id="title" type="text" value="<% if (editing) { %><%=  product.title  %><% } %>">
                <label class="active" for="title">Add Title</label>
            </div>
            <div class="input-field col s12">
                <input placeholder="Enter Image URL..." name="imageUrl" id="imageUrl" type="text" value="<% if (editing) { %><%=  product.imageUrl  %><% } %>">
                <label class="active" for="imageUrl">Add Image URL</label>
            </div>
            <div class="input-field col s12">
                <input placeholder="Enter Price..." name="price" id="price" type="number" step="0.01" value="<% if (editing) { %><%=  product.price  %><% } %>">
                <label class="active" for="price">Add Price</label>
            </div>
            <div class="input-field col s12">
                <textarea name="description" data-length="120" id="description" class="materialize-textarea"><% if (editing) { %><%=  product.description  %><% } %></textarea>
                <label class="active" for="description">Add Description</label>
            </div>
            <div class="col s12">
                <button type="submit" class="waves-effect waves-light btn red">
                        <% if (editing) { %>Update Product<% } else { %>Add Product<% } %> 
                </button>
            </div>
        </div>
    </form>
    <%- include('../includes/end')  %>