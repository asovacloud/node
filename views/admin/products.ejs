<%- include('../includes/head.ejs')  %>
    <% if (prods && prods.length > 0) { %>
        <div class="row">
            <% for (let product of prods) { %>
                <div class="col s12 m4">
                    <div class="card">
                        <div class="card-image">
                            <img src="<%= product.imageUrl %>" alt="<%= product.title %>" />
                        </div>
                        <div class="card-content overflow-hidden">
                            <span class="card-title"><%= product.title %> </span>
                            <p>
                                <%= product.description %>
                            </p>
                            <h6 class="secondary-content right">$
                                <%= product.price %>
                            </h6>
                        </div>
                        <div class="card-action overflow-hidden">
                            <div class="right">
                                <a href="/admin/edit-product/<%= product._id  %>?edit=true" class="waves-effect waves-light btn blue darken-2 left">
                                    Edit
                                </a>
                                <form class="left card__button-holder" action="/admin/delete-product" method="POST">
                                    <button class="waves-effect waves-light btn red" type="submit">
                                        Delete
                                    </button>
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
                <% } %>
        </div>
        <% } else { %>
            <div class="row">
                <div class="col s12">
                    <h4>No products in the list.</h4>
                </div>
            </div>
            <% } %>
                <%- include('../includes/end.ejs')  %>